{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"downlevelIteration": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"./node_modules/@types",
			"./@types"
		]
	},
	"ts-node": {
		"files": true
	},
	"include": [
		"./@types",
		"./src"
	]
}